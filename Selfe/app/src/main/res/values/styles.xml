    <style name="Selfie.CompoundButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:button">@null</item>
    </style>

    <style name="Selfie.CompoundButton.Radio" parent="Selfie.CompoundButton">
        <item name="android:background">@drawable/selector_checkable</item>
    </style>

    <style name="Selfie.CompoundButton.True" parent="Selfie.CompoundButton">
        <item name="android:background">@drawable/selector_true</item>
    </style>

    <style name="Selfie.CompoundButton.False" parent="Selfie.CompoundButton">
        <item name="android:background">@drawable/selector_false</item>
    </style>

    <style name="Selfie.TextAppearance" />

    <style name="Selfie.TextAppearance.CategoryItem" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/category_item_text_size</item>
    </style>

    <style name="Selfie.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/Selfie_primary</item>
    </style>

    <style name="Selfie.TextAppearance.Title.Inverse" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Selfie.TextAppearance.Title.Picker" parent="Selfie.TextAppearance.Title">
        <item name="android:textSize">96sp</item>
    </style>

    <style name="Selfie.TextAppearance.Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/Selfie_primary</item>
    </style>

    <style name="Selfie.TextAppearance.ListItem" parent="TextAppearance.AppCompat.Subhead" />
    <style name="Selfie.TextAppearance.ListItemSecondary" parent="TextAppearance.AppCompat.Body1" />


