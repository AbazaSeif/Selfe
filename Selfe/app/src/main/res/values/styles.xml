<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Exists for inheritance purposes -->
    <style name="Selfie" parent="Selfie.Base" />

    <style name="Selfie.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Selfie_primary</item>
        <item name="colorPrimaryDark">@color/Selfie_primary_dark</item>
        <item name="colorAccent">@color/Selfie_accent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@color/text_light</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/Selfie_primary_dark
        </item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:radioButtonStyle">@style/Selfie.CompoundButton.Radio</item>
        <item name="android:buttonStyle">@style/Selfie.CompoundButton</item>
        <item name="android:windowBackground">@color/light_grey</item>
        <item name="android:colorBackground">@color/light_grey</item>
    </style>

    <style name="Selfie.CategorySelectionActivity" />
    <style name="Selfie.QuizActivity" />
    <style name="Selfie.SignInActivity" />

